{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },

  "ConnectionStrings": {
    "DwOpinions": "Server=VIVOBOOK\\SQLEXPRESS;Database=DW_Opiniones;Integrated Security=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },

  "CsvExtractor": {
    "FilePath": "src/CustomerOpinionsETL.Infrastructure/Data/surveys.csv",
    "HasHeaderRecord": true,
    "Delimiter": ","
  },

  "DatabaseExtractor": {
    "ConnectionString": "Server=VIVOBOOK\\SQLEXPRESS;Database=TransactionalDB;Integrated Security=true;TrustServerCertificate=true",
    "Query": "SELECT TOP 1000 ProductId, ProductName, Category, Brand, CustomerId, CustomerName, Country, City, Segment, AgeRange, ReviewDate, Rating, SentimentScore, Comment FROM vw_CustomerReviews",
    "CommandTimeout": 300
  },

  "ApiExtractor": {
    "BaseUrl": "https://localhost:5001",
    "Endpoint": "/api/v1/opinions",
    "ApiKey": "dev-api-key",
    "TimeoutSeconds": 60,
    "MaxRetries": 3
  },

  "Etl": {
    "BatchSize": 1000,
    "MaxDegreeOfParallelism": 2,
    "EnableParallelExtraction": true,
    "StagingPath": "./staging",
    "IntervalMinutes": 5
  }
}
