{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DwOpinions": "Server=localhost;Database=DW_Opiniones;Integrated Security=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },

  "CsvExtractor": {
    "FilePath": "./data/surveys.csv",
    "HasHeaderRecord": true,
    "Delimiter": ","
  },

  "DatabaseExtractor": {
    "ConnectionString": "Server=localhost;Database=TransactionalDB;Integrated Security=true;TrustServerCertificate=true",
    "Query": "SELECT ProductId, ProductName, Category, Brand, CustomerId, CustomerName, Country, City, Segment, AgeRange, ReviewDate, Rating, SentimentScore, Comment FROM vw_CustomerReviews",
    "CommandTimeout": 300
  },

  "ApiExtractor": {
    "BaseUrl": "https://api.example.com",
    "Endpoint": "/api/v1/opinions",
    "ApiKey": "",
    "TimeoutSeconds": 300,
    "MaxRetries": 3
  },

  "Etl": {
    "BatchSize": 10000,
    "MaxDegreeOfParallelism": 4,
    "EnableParallelExtraction": true,
    "StagingPath": "./staging",
    "IntervalMinutes": 60
  }
}
